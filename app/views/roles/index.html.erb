<% content_for(:page_title) do "Roles" end %>
<% content_for(:page_heading) do "Roles" end %>

<p id="notice"><%= notice %></p>

<table id="roles">
  <tr>
    <th>Name</th>
    <th>Shortname</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= role.shortname %></td>
    <td><%= link_to 'Show', role, :title => "Show: #{role.uuid}" %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to('Create new role', new_role_path) %>

