<% if @collection.title && ! @collection.title.blank?
      display_title = @collection.title
    else
      display_title = '(untitled)'
    end
 %>

<% content_for(:page_title) do display_title end %>
<% content_for(:page_heading) do display_title end %>

<p id="notice"><%= notice %></p>

<!-- <%= @record.uuid %> -->

<div id="show">
  <h3>Data content</h3>
  <%= show_field(@collection.alt_titles, 'Alternative title') %>
  <%= show_field(@collection.description, 'Description') %>
  <%= show_field(@collection.keywords, 'Keyword') %>
  
  <h3>Availability</h3>
  <%= show_field(@collection.urls, 'Web page') %>
  
  <h3>Rights</h3>
  <%= show_field(@collection.rights_access, 'Access rights') %>
  <%= show_field(@collection.rights_statement, 'Access statement') %>
  <%= show_field(@collection.rights_licence, 'Licence') %>

  <h3>People and projects</h3>

  <div id="editActions">
  <%=
    # Edit button
 
    form_tag(edit_record_path(@record), :method => :get) do 
      submit_tag('Edit this record')
    end
  %>
  </div>

</div>


<% content_for(:navigation) do %>
<ul id="navigation">
  <li><a class="head" href="#">Records</a>
    <ul class="section">
      <li><a href="<%= records_path %>">Search</a></li>
      <li><a href="<%= records_path %>">Browse</a></li>
      <li><a href="<%= new_record_path %>">Create a new collection record</a></li>
    </ul>
  </li>
  <li><a class="head" href="/">Settings</a></li>
  <li><a class="head" href="<%= users_path %>">Administration</a></li>
  <li><a class="head link" href="/help">Help</a></li>
</ul>
<% end %>
