<table id="results">
<% @entries.each do |col|
     record = col[0]
     collection = col[1]
 %>
  <tr>
    <% if collection.title && ! collection.title.blank?
         display_title = collection.title
       else
         display_title = '(untitled)'
       end %>
    <th><%= link_to display_title, record, :title => record.uuid %></th>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
<!--
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
-->

  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'New record', new_record_path, :class => 'new' %></p>
